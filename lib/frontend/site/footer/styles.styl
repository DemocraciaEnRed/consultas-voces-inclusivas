.ext-footer
  padding 60px 0 0 0
  margin-top 30px
  font-size 1em
  background-color #fff
  border-top: 1px solid rgba(0, 0, 0, 0.1)
  @media only screen and (max-width: 768px)
      margin-top: 8px
  .footer
    max-width 1180px
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    align-items center
    justify-content space-between
    gap: 1rem

  .institutional
    flex-grow 2
    @media only screen and (max-width: 768px)
      margin-bottom 2rem

    .impulsan-logos
      @media only screen and (max-width: 768px)
        margin-bottom 2rem
      .logos
        display flex
        flex-wrap: wrap
        @media only screen and (max-width: 768px)
          justify-content center
        img
          margin-right 15px
          height 96px
    .apoyo-logos
      .logos
        display flex
        gap: 1rem
        flex-wrap: wrap
        @media only screen and (max-width: 768px)
          justify-content center
        img
          margin-right 15px
          height 32px
    p
      max-width 560px
  a
    color $tertiary-color
    font-weight 400
    &:hover
      color $tertiary-color-hover
      text-decoration underline

  

  .menu
    padding 0 15px
    text-align left
    @media only screen and (max-width: 768px)
      text-align: center
    &:first-of-type
      flex-grow 3

    a
      display block
      padding 6px 0

  @media only screen and (max-width: 687px)
    .footer
      flex-direction column
      flex-wrap wrap
      padding 0 10px

    .menu
      padding-right 0
      a
        display block
        line-height 1em

    .institutional
      padding 0 15px
