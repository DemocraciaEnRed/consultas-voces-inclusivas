.ext-footer
  padding 60px 0 0 0
  margin-top 30px
  font-size 1em
  background-color #fff
  border-top: 1px solid rgba(0, 0, 0, 0.1)
  @media only screen and (max-width: 768px)
      margin-top: 8px
  .footer
    max-width 1180px
    margin 0 auto
    display flex
    flex-direction row
    flex-wrap wrap
    align-items center
    justify-content space-between
    gap: 1rem

  .institutional
    width:36%
    @media only screen and (max-width: 768px)
      text-align: center
      width:100%
      margin-bottom 2rem

    .impulsan-logos
      @media only screen and (max-width: 768px)
        margin-bottom 2rem
      .logos
        display flex
        flex-wrap: wrap
        gap: 1rem
        justify-content space-between
        @media only screen and (max-width: 768px)
          justify-content center
        a  
          width: 45%
          display: flex
          justify-content center
          align-items: center
          img
            width: 190px
            &.logo-incubadora
              width: 200px
            &.logo-politize
              width: 180px
            &.logo-cpi
              width: 200px
    
    p
      max-width 560px
  a
    color $tertiary-color
    font-weight 400
    &:hover
      color $tertiary-color-hover
      text-decoration underline

  

  .menu
    padding 0 15px
    text-align left
    width:30%
    &.nav
      text-align: center
    &.pol
      text-align: right
      @media only screen and (max-width: 768px)
        text-align: center
    @media only screen and (max-width: 768px)
      width:100%
      text-align: center

    a
      display block
      padding 6px 0

  @media only screen and (max-width: 687px)
    .footer
      flex-direction column
      flex-wrap wrap
      padding 0 10px

    .menu
      padding-right 0
      a
        display block
        line-height 1em

    .institutional
      padding 0 15px
.policies
  text-align: center
  margin-top:3rem